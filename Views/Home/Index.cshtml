@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid bg-1 text-center">
    <img src="/img/logoDriveTime.png" id="logodrivetime" class="rounded mx-auto d-block" alt="...">
</div>

<div class="container-fluid bg-1 text-center">
    <p class="display-2">Drive Time</p>
   <p class="h4">Experiência única entre o físico e o digital, para comprar ou vender seu carro</p>
   <p class="h4">Ganhe até <span class="text-orange">5%</span> de desconto no seu carro novo</p>
   <hr />
</div>

<div class="container-fluid bg-1 shadow p-3 mb-5 bg-white rounded">
    <div id="carouselFrutas" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class=""
                            aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"
                            class=""></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"
                            class="active" aria-current="true"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item">
                        <img src="/img/Fiat-Fastback-28-768x432.jpg" alt="" height="600" width="300" class="d-block w-100">
                        <div class="carousel-caption d-none d-md-block"
                            <h5>Fiat Fastback</h5>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/img/Jeep-Compass-S-2022-768x432.jpg" alt="" height="600" width="300" class="d-block w-100">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Jeep Compass</h5>

                        </div>
                    </div>
                    <div class="carousel-item active">
                        <img src="/img/novo-polo-2023.jpg" alt="" height="600" width="300" class="d-block w-100">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Polo</h5>

                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselFrutas"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselFrutas"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
    </div>
</div> 
<hr />
<div class="container-fluid bg-3 text-center">
    <h3 class="margin">Marcas que trabalhamos</h3><br>
    <div class="row">
        <div class="col-sm-4">
           <img src="/img/861_vw.jpg" class="img-responsive margin" style="width:80%" alt="Image">
        </div>
        <div class="col-sm-4">
            <img src="/img/fiat-logo-1.png" class="img-responsive margin" style="width:55%" alt="Image">
        </div>
        <div class="col-sm-4">
           <img src="/img/hyundai-logo-0.png" class="img-responsive margin" style="width:90%" alt="Image">
        </div>
    </div>
</div>
<hr />
<div class="container shadow p-3 mb-5 bg-white rounded">
    <div class="row">
        <div class="col-md-6" style="margin-top:30px;">
            <!-- Conteúdo da primeira coluna -->
            <p class="h2">Compre ja o Novo Polo GTS!</p>
            <p class="text-muted">Um só polo de tecnologia, segurança e esportividade. Sinta a potencia e conquiste as ruas com o Novo Polo GTS!</p>
        </div>
        <div class="col-md-6 embed-responsive embed-responsive-16by9">
            
            <img src="/img/polo-gts-my23-preto-ninja-34-frente_1920x1080px.jpg" class="img-fluid" alt="...">
            
        </div>
    </div>
</div>



