@model ProjetoInterdisciplinarConcessionariaDriveTIme.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<body id="bodyContatos">
    

    <div id="bodyContatos>
        <div class="col-md-4">
            <form asp-action="Create" class="shadow p-3 mb-5 bg-white rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
